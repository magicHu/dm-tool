<h1>Listing jobs
  <%= link_to 'New Job', new_job_path, class: 'btn btn-success'%>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Path</th>
      <th>Hbase</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.desc %></td>
        <td><%= job.path %></td>
        <td><%= job.hbase %></td>
        <td>
          <%= link_to 'Run', run_job_path(job), class: 'btn btn-danger' %>
          <%= link_to 'Detail', job, class: 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

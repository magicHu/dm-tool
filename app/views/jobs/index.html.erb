<h1>Listing jobs
  <%= link_to 'New Job', new_job_path, class: 'btn btn-success'%>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Path</th>
      <th>Hbase</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.name, job %></td>
        <td><%= job.desc %></td>
        <td><%= job.path %></td>
        <td><%= job.hbase %></td>
        <td class='col-md-3'>
          <%= link_to 'Run', pig_tasks_path() + "?pig_task[job_ids][]=#{job.id}", method: :POST, class: 'btn btn-success' %>
          <%= link_to 'Show', job, class: 'btn btn-default' %>
          <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @jobs %>
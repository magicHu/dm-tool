<h1 class="page-header">Ad Campaign Keywords
  <button class='btn btn-success' data-toggle='modal' data-target='#add-adcampaign-keywords-model'>Add</button>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>ad campaign id</th>
      <th>keywords or target url</th>
      <th>match cookie count</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_campaign_keywords.each do |ad_campaign, keywords| %>
      <tr>
        <td><%= ad_campaign %></td>
        <td><%= keywords %></td>
        <td>
          <span class="badge badge-danger">
            <%= @ad_campaign_match_count[ad_campaign] %>
          </span>
        </td>
        <th>
          <a href="/ad_campaigns/<%= ad_campaign %>?target_type=1" class='btn btn-danger' data-method="delete">
            <i class="icon-trash icon-large"></i> Delete
          </a>
        </th>
      </tr>
    <% end %>

    <% @ad_campaign_target_url.each do |ad_campaign, target_url| %>
      <tr>
        <td><%= ad_campaign %></td>
        <td><%= target_url %></td>
        <td>
          <span class="badge badge-danger">
            <%= @ad_campaign_match_count[ad_campaign] %>
          </span>
        </td>
        <th>
          <a href="/ad_campaigns/<%= ad_campaign %>?target_type=2" class='btn btn-danger' data-method="delete">
            <i class="icon-trash icon-large"></i> Delete
          </a>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag("/ad_campaigns", method: 'post', class: 'form-horizontal') do %>
<div class="modal fade" id="add-adcampaign-keywords-model" role="dialog" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add AdCampaign Keywords</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="id" class="col-sm-4 control-label">Ad Campaign Id</label>
          <div class="col-sm-8">
            <input type="number" class="form-control" name="id" placeholder="请输入Ad Campaign Id">
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-4 control-label">Target Type</label>
          <div class="col-sm-8">
            <label class="checkbox-inline">
              <input type="radio" name="target_type" value="1"> keywords
            </label>
            <label class="checkbox-inline">
              <input type="radio" name="target_type" value="2"> target url
            </label>
          </div>

        </div>

        <div class="form-group">
          <label for="keywords" class="col-sm-4 control-label">Keywords</label>
          <div class="col-sm-8">
            <input type="keywords" class="form-control" name="keywords" placeholder="请输入关键字，使用半角逗号分割">
          </div>
        </div>

        <div class="form-group">
          <label for="target_url" class="col-sm-4 control-label">Target Url</label>
          <div class="col-sm-8">
            <input type="target_url" class="form-control" name="target_url" placeholder="请输入定向URL，使用半角逗号分割">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>
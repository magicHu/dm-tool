<%= form_for(@param, html: { role: "form", class: "form-horizontal" }) do |f| %>
  <% if @param.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@param.errors.count, "error") %> prohibited this param from being saved:</h2>

      <ul>
      <% @param.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Param Name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :desc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :desc, class: "form-control", placeholder: "Param Desc" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :default_value, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :default_value, class: "form-control", placeholder: "Param Default Value" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Submit</button>
      <%= link_to 'Back', params_path, class: 'btn btn-default' %>
    </div>
  </div>
  
<% end %>
